<body onload="init()">

    <div class="main-area" id="grid"></div>

    <div class="sidebar">
        <h3>App Launcher</h3>
        <label>App Name</label>
        <input type="text" id="appName" placeholder="Shortcut name...">
        <label>File Path</label>
        <input type="text" id="appPath" placeholder="C:\Users\...">
        <button class="btn" onclick="saveApp()">Add Shortcut</button>
        <button class="btn btn-danger" onclick="resetAll()">Delete All</button>
        <div class="signature">Created by xainex</div>
    </div>

<script>
    var fso = new ActiveXObject("Scripting.FileSystemObject");
    var shell = new ActiveXObject("WScript.Shell");
    var db = shell.SpecialFolders("Desktop") + "\\launcher_pro_data.txt";

    function init() { 
        var w = 900;
        var h = 600;
        window.resizeTo(w, h);
        window.moveTo((screen.width - w) / 2, (screen.height - h) / 2);
        loadApps(); 
    }

    function loadApps() {
        var grid = document.getElementById("grid");
        grid.innerHTML = "";
        if (!fso.FileExists(db)) return;
        try {
            var f = fso.OpenTextFile(db, 1);
            while (!f.AtEndOfStream) {
                var line = f.ReadLine();
                if (line.indexOf("|") != -1) {
                    var p = line.split("|");
                    createTile(p[0], p[1]);
                }
            }
            f.Close();
        } catch(e) {}
    }

    function createTile(name, path) {
        var div = document.createElement("div");
        div.className = "app-tile";
        div.innerHTML = "<span>" + name + "</span><button class='del-btn' onclick='deleteApp(\"" + name + "\", event)'>X</button>";
        div.onclick = function() {
            try { shell.Run('"' + path.replace(/\"/g, "") + '"'); }
            catch(e) { alert("Error: Path not valid!"); }
        };
        document.getElementById("grid").appendChild(div);
    }

    function saveApp() {
        var n = document.getElementById("appName").value;
        var p = document.getElementById("appPath").value;
        if (!n || !p) return;
        var f = fso.OpenTextFile(db, 8, true);
        f.WriteLine(n + "|" + p);
        f.Close();
        loadApps();
        document.getElementById("appName").value = "";
        document.getElementById("appPath").value = "";
    }

    function deleteApp(name, e) {
        if (e.stopPropagation) e.stopPropagation(); else e.cancelBubble = true;
        var temp = "";
        if (fso.FileExists(db)) {
            var f = fso.OpenTextFile(db, 1);
            while (!f.AtEndOfStream) {
                var line = f.ReadLine();
                if (line.split("|")[0] !== name) temp += line + "\r\n";
            }
            f.Close();
            var f2 = fso.OpenTextFile(db, 2, true); f2.Write(temp); f2.Close();
        }
        loadApps();
    }

    function resetAll() {
        if(confirm("Delete all?")) { if (fso.FileExists(db)) fso.DeleteFile(db); loadApps(); }
    }
</script>
